# CXHMS 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# ==================== 服务器配置 ====================
CXHMS_HOST=0.0.0.0
CXHMS_PORT=8000
CXHMS_DEBUG=true
CXHMS_LOG_LEVEL=INFO

# ==================== 数据库配置 ====================
CXHMS_DATABASE_PATH=data/cxhms.db
CXHMS_DATABASE_MEMORIES_DB=data/memories.db
CXHMS_DATABASE_SESSIONS_DB=data/sessions.db
CXHMS_DATABASE_ACP_DB=data/acp

# ==================== LLM 模型配置 ====================
# 主模型
CXHMS_LLM_PROVIDER=ollama
CXHMS_LLM_HOST=http://localhost:11434
CXHMS_LLM_MODEL=qwen3-vl:8b
CXHMS_LLM_API_KEY=

# 摘要模型（可选，默认跟随主模型）
CXHMS_SUMMARY_MODEL=qwen3-vl:8b

# 记忆模型（可选，默认跟随主模型）
CXHMS_MEMORY_MODEL=qwen3-vl:8b

# ==================== 向量数据库配置 ====================
CXHMS_VECTOR_ENABLED=true
CXHMS_VECTOR_BACKEND=milvus_lite
CXHMS_MILVUS_PATH=data/milvus_lite.db
CXHMS_VECTOR_SIZE=768

# ==================== 记忆系统配置 ====================
CXHMS_MEMORY_MAX=10000
CXHMS_DECAY_ENABLED=true
CXHMS_ARCHIVE_ENABLED=true

# ==================== ACP 配置 ====================
CXHMS_ACP_ENABLED=true
CXHMS_ACP_AGENT_ID=cxhms_agent_001
CXHMS_ACP_AGENT_NAME=CXHMS Agent

# ==================== 工具配置 ====================
CXHMS_TOOLS_ENABLED=true
CXHMS_MCP_ENABLED=false

# ==================== 安全配置 ====================
CXHMS_API_KEY_ENABLED=false
CXHMS_API_KEY=your-secret-api-key-here
CXHMS_RATE_LIMIT_ENABLED=false
CXHMS_RATE_LIMIT_REQUESTS=100

# ==================== CORS 配置 ====================
CXHMS_CORS_ORIGINS=*

# ==================== 配置文件路径 ====================
# 指定自定义配置文件路径
# CXHMS_CONFIG_PATH=config/custom.yaml
